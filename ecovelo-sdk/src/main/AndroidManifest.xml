<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions requises par le SDK -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Permission pour la localisation (optionnel, pour la carte) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Permission pour la caméra -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application>
        
        <!-- Activity principale du SDK (Capacitor BridgeActivity) -->
        <activity
            android:name=".ui.EcoveloActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard|navigation|uiMode"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.EcoveloSDK"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Activity pour la saisie du téléphone -->
        <activity
            android:name=".ui.phone.PhoneInputActivity"
            android:exported="false"
            android:theme="@style/Theme.EcoveloSDK.Dialog"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- FileProvider pour la caméra -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
            
    </application>

</manifest>
